<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_item_carrinhoProdutoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X-tudo"
            android:textSize="16sp"
            style="@style/ThemaTextoDark"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_item_carrinhoProdutoDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="sadasdad"
            android:textSize="13sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_item_carrinhoProdutoAdicional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="asdasdas"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_item_carrinhoProdutoValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:text="R$ 12"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_item_carrinhoProdutoRemover"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:src="@drawable/ic_remover_carrinho"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5EFFFFFF"/>

    </LinearLayout>



</LinearLayout>